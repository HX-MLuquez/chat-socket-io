<div class="chatContainer">
  <!-- Barra lateral izquierda -->
  <div class="sidebar">
    <h1>Chat General</h1>
    <input id="username" placeholder="Tu nombre" />
    <button onclick="connect()">Conectar</button>

    <div id="general" class="sidebarSection">
      <input id="generalInput" placeholder="Mensaje general" />
      <button onclick="sendGeneralMessage()">Enviar</button>
    </div>

    <h2>Usuarios conectados</h2>
    <ul id="userList"></ul>

    <h2>Chats Privados</h2>
    <div id="privateChats"></div>
  </div>

  <!-- Pantalla principal del chat seleccionado -->
  <div class="chatMain">
    <div id="generalMessages" class="chatMessages"></div>
  </div>
</div>


